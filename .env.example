# Example configuration file
# Copy this file to .env and fill in your real credentials

# Email server configuration
imap_server=imap.example.com
imap_user=your-email@example.com
imap_password=your-password-here
imap_port=993
imap_ssl=true

# OpenAI API key for email summarization
openai_api_key=your-openai-api-key-here

# Discord bot configuration
discord_token=your-discord-bot-token-here
discord_channel_id=your-discord-channel-id-here

# Comma-separated list of whitelisted email addresses to monitor
whitelisted_email_addresses=sender1@example.com,sender2@example.com 

# Logging configuration
log_level=INFO                # DEBUG, INFO, WARNING, ERROR, or CRITICAL
log_concise=true              # true for cleaner output, false for detailed logs
log_to_file=false             # true to save logs to file, false for console only
log_dir=logs                  # directory to store log files